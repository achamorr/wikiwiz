{
    "name": "WikiWiz!",
    "version": "1.0",
    "description": "Wikipedia's Best Friend",
    "permissions": ["tabs", "activeTab", "declarativeContent", "storage"],
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": ["js/content.js", "js/webscrape.js"],
        "css": ["css/styles.css"]
      }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "32": "images/icon32.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
          }
      },
      "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      },
    "manifest_version": 2,
    "web_accessible_resources": ["src/img/*"]
  }
